\newcommand{\stylename}{Marcantoni Beamer style}
\typeout{}

\mode<presentation>

\setbeamertemplate{navigation symbols}{}

\useoutertheme{infolines}
\useinnertheme[shadow=true]{rounded}

\usecolortheme{Marcantoni}

\setbeamercolor{normal text}{fg=myred!10!black}
\setbeamercolor{alerted text}{fg=myred!90!black}
\setbeamercolor{quote}{fg=myred!80!white}
% bullets
\setbeamercolor*{item}{fg=myred}
% front page
\setbeamercolor{title}{fg=myred!90!black}
\setbeamercolor{subtitle}{fg=myred!90!white}
\setbeamercolor{author}{fg=black}
\setbeamercolor{institute}{fg=black}
\setbeamercolor{date}{fg=black}
% block header
\setbeamercolor{block title}{use=structure,fg=silver!90!white,bg=myred!75!black}
\setbeamercolor{block title alerted}{use=alerted text,fg=silver!50!white,bg=myred!35!black}
\setbeamercolor{block title example}{use=example text,fg=myred!30!black,bg=myred!30!white}
% block body
\setbeamercolor{block body}{parent=normal text,use=block title,bg=myred!2!white}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=myred!5!white}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=myred!7!white}
% table of content
\setbeamercolor{section in toc}{fg=myred!40!black}
\setbeamercolor{subsection in toc}{fg=myred!50!black}
% footnote
\setbeamercolor{footnote mark}{fg=myred!90!black}
\setbeamercolor{footnote}{fg=myred!25!gray}
% biblio
\setbeamertemplate{bibliography item}{\insertbiblabel}
\setbeamercolor{bibliography entry author}{fg=myred!90!black}
\setbeamercolor{bibliography entry title}{fg=myred!75!black} 
\setbeamercolor{bibliography entry location}{fg=myred!75!gray} 
\setbeamercolor{bibliography entry note}{fg=silver!50!black}  
% abstract
\setbeamercolor*{abstract title}{fg=myred}
\setbeamerfont*{abstract title}{family=\sffamily}
\setbeamercolor*{abstract}{fg=purple!50!black}
\setbeamerfont*{abstract}{family=\rmfamily,size=\small}
% Citation
\newcommand{\ccite}[1]{{\textcolor{silver!80!black}{\textsuperscript{\tiny\cite{#1}}}}}
\newcommand{\cccite}[1]{{\textcolor{silver}{\textsuperscript{\tiny\cite{#1}}}}}
% URL
\newcommand{\uurl}[1]{{\textcolor{myred!75!black}{\scriptsize\url{#1}}}}
\newcommand{\uuurl}[1]{{\textcolor{silver!80!black}{\tiny\url{#1}}}}
% DOI
\newcommand{\ddoi}[1]{{\textcolor{myred!75!black}{\scriptsize DOI:\href{http://dx.doi.org/#1}{#1}}}}
\newcommand{\dddoi}[1]{{\textcolor{silver!80!black}{\tiny DOI:\href{http://dx.doi.org/#1}{#1}}}}
% emph 
\renewcommand{\emph}[1]{\textcolor{myred!50!black}{\textit{#1}}}
% alert 
%\renewcommand{\alert}[1]{\textcolor{myred!90!black}{#1}}
\newcommand{\aalert}[1]{\textcolor{silver!90!black}{\it#1}}
% speaker
\newcommand{\speaker}[1]{\textcolor{myred!75!red}{#1}}
\newcommand{\sspeaker}[1]{\textcolor{myred!20!white}{\it#1}}
%
\usepackage[T1]{fontenc}
%
\setbeamertemplate{footline}{
    \leavevmode%
    \hbox{%
        \begin{beamercolorbox}[wd=.2\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%
            \usebeamerfont{author in head/foot}\insertshortauthor
        \end{beamercolorbox}%
        \begin{beamercolorbox}[wd=.55\paperwidth,ht=2.25ex,dp=1ex,center]{title in head/foot}%
            \usebeamerfont{title in head/foot}\insertshorttitle
        \end{beamercolorbox}%
        \begin{beamercolorbox}[wd=.25\paperwidth,ht=2.25ex,dp=1ex,center]{date in head/foot}%
            \usebeamerfont{date in head/foot}\insertshortdate{}\hspace*{2em}
            \insertframenumber{} / \inserttotalframenumber
        \end{beamercolorbox}%
    }%
    \vskip0pt%
}
\mode
<all>